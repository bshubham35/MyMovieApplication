@model MyMovieApp.Entity.UserModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login Page</h1>

<form method="post">
    <div>
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <form>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input asp-for="Email" asp-action="Login" asp-controller="User" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input asp-for="Password" asp-action="Login" asp-controller="User" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-primary" >Submit</button>
                </form>
            </div>
            <div class="col"></div>
        </div>
    </div>
</form>